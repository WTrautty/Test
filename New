    .sidebar button {{
      padding: 15px 20px;
      background: none;
      border: none;
      text-align: left;
      color: white;
      font-weight: 500;
      font-size: 15px;
      width: 100%;
      transition: background 0.2s ease;
      cursor: pointer;
    }}

