bar = go.Figure(go.Bar(
    y=diff["Closure Code 1"],
    x=diff["Delta"],
    orientation="h",
    marker_color=colors,
    hovertemplate="<b>%{y}</b><br>Delta: %{x:+.1f}%<extra></extra>"
))

bar.update_layout(
    title=f"{owner} vs {TOP_LABEL} – Closure Code Δ",
    xaxis=dict(
        range=[-20, 20],
        ticksuffix="%",
        title="Δ vs Top Performer"
    ),
    height=300
)
