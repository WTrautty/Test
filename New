# === Find Removed rows from Sheet1 ===
for key in df1.index:
    if key not in df2.index:
        removed_row = df1.loc[key]
        if isinstance(removed_row, pd.DataFrame):
            for _, sub_row in removed_row.iterrows():
                summary_ws.append(["Removed", key] + sub_row.tolist())
        else:
            summary_ws.append(["Removed", key] + removed_row.tolist())
