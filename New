# === Find Removed rows from Sheet1 ===
removed_keys = set(df1.index) - set(df2.index)
for key in removed_keys:
    removed_rows = df1.loc[[key]] if isinstance(df1.loc[key], pd.Series) else df1.loc[key]
    if isinstance(removed_rows, pd.Series):
        summary_ws.append(["Removed", key] + removed_rows.tolist())
    else:
        for _, row in removed_rows.iterrows():
            summary_ws.append(["Removed", key] + row.tolist())
