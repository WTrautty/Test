# Automatically name the output file
output_filename = f"{sanitized_order_number} - Router Refresh.txt"
full_output_path = os.path.join(export_path, output_filename)

# Write to file
with open(full_output_path, 'w', encoding='utf-8') as file:
    file.write(template)

print(f"New text file '{full_output_path}' created successfully!")
