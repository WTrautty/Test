    .sidebar button.active {{
      background: #1e90ff;
    }}

    /* === MAIN CONTENT === */
    .main-content {{
      margin-left: 220px;
      padding: 30px;
      flex: 1;
    }}

    h1 {{
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 20px;
    }}

    .main-tab {{
      display: none;
      background: white;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
      margin-bottom: 40px;
    }}

    .tab-buttons-wrapper {{
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
