def get_bor_lan(ipv6_value):
    print("[DEBUG] Original IPv6 WAN value:", ipv6_value)

    # Simplified pattern: match only 'f::9/126' case-insensitive
    pattern = r'f::9/126'
    result = re.sub(pattern, '0::/56', ipv6_value, flags=re.IGNORECASE)

    print("[DEBUG] Transformed BOR LAN value:", result)
    return result

# Retrieve original WAN value and apply transformation
ipv6_wan = data.get("IPv6 WAN", "")
bor_lan = get_bor_lan(ipv6_wan)

# Template replacement
template = template.replace('{BOR LAN}', bor_lan)

# Final output check
print("[DEBUG] Final template result:", template)
