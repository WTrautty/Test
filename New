def main():
    try:
        df = pd.read_excel(EXCEL_PATH, engine="openpyxl")
    except Exception:
        raise

    try:
        frat_df = pd.read_excel(FRAT_PATH, engine="openpyxl")
    except Exception as e:
        raise RuntimeError(f"Failed to load FRAT Excel file: {e}")

    validate_columns(df, ["Task Owner", "Closure Code 1", "Completed Date"], EXCEL_PATH)
    df = df.dropna(subset=["Task Owner", "Closure Code 1", "Completed Date"])
    df["Completed Date"] = pd.to_datetime(df["Completed Date"], errors="coerce")
    df = df.dropna(subset=["Completed Date"])
    df["Month"] = df["Completed Date"].dt.to_period("M").astype(str)
    df["Is Fail"] = df["Closure Code 1"].str.lower().str.contains("fail|failed|failure", na=False)

    frat_tab_html = generate_frat_tab(frat_df)
    sheet2_pie_html = generate_sheet2_task_owner_pie_chart_only()
    barry_mac_tab_html = generate_barry_mac_pie_tab()

    html = f"""
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Closure Code Dashboard</title>
  <script src="plotly-latest.min.js"></script>
  <style>
    * {{ box-sizing: border-box; }}
    body {{
      font-family: 'Inter', 'Segoe UI', Tahoma, sans-serif;
      margin: 0;
      background-color: #f4f6f9;
      display: flex;
      color: #333;
    }}
    .sidebar {{
      width: 220px;
      background: #2f3542;
      color: #fff;
      height: 100vh;
      position: fixed;
      top: 0; left: 0;
      display: flex;
      flex-direction: column;
      padding-top: 30px;
      z-index: 10;
    }}
    .sidebar h2 {{
      text-align: center;
      font-size: 20px;
      margin-bottom: 30px;
    }}
    .sidebar button {{
      padding: 15px 20px;
      border: none;
      background: none;
      color: white;
      text-align: left;
      width: 100%;
      font-size: 15px;
      cursor: pointer;
      transition: background 0.2s ease;
    }}
    .sidebar button:hover {{
      background: #57606f;
    }}
    .sidebar button.active {{
      background: #1e90ff;
    }}
    #content-wrapper {{
      margin-left: 220px;
      padding: 30px;
      width: 100%;
    }}
    .main-content, .side-content {{
      background: white;
      padding: 30px;
      border-radius: 12px;
      margin-bottom: 40px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.06);
    }}
    @media (max-width: 768px) {{
      .sidebar {{
        width: 100%;
        height: auto;
        flex-direction: row;
        justify-content: space-around;
        position: relative;
      }}
      #content-wrapper {{
        margin-left: 0;
        padding: 20px;
      }}
    }}
    .viewbtn {{
      padding: 10px 20px;
      border: none;
      background: #57606f;
      color: white;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.2s ease;
    }}
    .viewbtn:hover {{
      background: #1e90ff;
    }}
    .viewbtn.active {{
      background: #1e90ff;
    }}
  </style>
  <script>
    function switchMainTab(evt, tabId) {{
      const isSide = document.getElementById('sideDashboard').style.display === 'block' || document.getElementById('barryMacTab').style.display === 'block';
      const tabClass = isSide ? '.side-tab' : '.main-tab';
      const tabs = document.querySelectorAll(tabClass);
      tabs.forEach(tab => tab.style.display = 'none');
      document.getElementById(tabId).style.display = 'block';

      const sidebarId = isSide ? '#sideSidebar' : '#mainSidebar';
      const buttons = document.querySelectorAll(sidebarId + ' button');
      buttons.forEach(btn => btn.classList.remove('active'));
      evt.currentTarget.classList.add('active');

      window.dispatchEvent(new Event('resize'));
    }}

    function toggleView(view) {{
      const mainContent = document.getElementById('mainDashboard');
      const sideContent = document.getElementById('sideDashboard');
      const mainBtn = document.getElementById('mainBtn');
      const sideBtn = document.getElementById('sideBtn');
      const mainSidebar = document.getElementById('mainSidebar');
      const sideSidebar = document.getElementById('sideSidebar');

      document.querySelectorAll('.main-tab, .side-tab').forEach(el => el.style.display = 'none');
      document.querySelectorAll('.sidebar button').forEach(btn => btn.classList.remove('active'));

      if (view === 'main') {{
        mainContent.style.display = 'block';
        sideContent.style.display = 'none';
        mainBtn.classList.add('active');
        sideBtn.classList.remove('active');
        mainSidebar.style.display = 'flex';
        sideSidebar.style.display = 'none';

        document.getElementById('globalTab').style.display = 'block';
        document.querySelector('#mainSidebar button:nth-of-type(1)').classList.add('active');
      }} else {{
        mainContent.style.display = 'none';
        sideContent.style.display = 'block';
        mainBtn.classList.remove('active');
        sideBtn.classList.add('active');
        mainSidebar.style.display = 'none';
        sideSidebar.style.display = 'flex';

        document.getElementById('sideDashboard').style.display = 'block';
        document.querySelector('#sideSidebar button:nth-of-type(1)').classList.add('active');
      }}

      window.dispatchEvent(new Event('resize'));
    }}

    window.onload = function () {{
      document.getElementById('globalTab').style.display = 'block';
      document.getElementById('mainDashboard').style.display = 'block';
      document.querySelector('#mainSidebar button').classList.add('active');
    }};
  </script>
</head>
<body>

  <!-- MAIN SIDEBAR -->
  <div id="mainSidebar" class="sidebar">
    <h2>Dashboard</h2>
    <button onclick="switchMainTab(event, 'globalTab')">Global</button>
    <button onclick="switchMainTab(event, 'individualTab')">Individual</button>
    <button onclick="switchMainTab(event, 'schedulingTab')">Scheduling</button>
    <button onclick="switchMainTab(event, 'lecTab')">LEC</button>
    <button onclick="switchMainTab(event, 'failureTab')">Failure Analysis</button>
    <button onclick="switchMainTab(event, 'fratTab')">FRAT</button>
  </div>

  <!-- SIDE SIDEBAR for Barry -->
  <div id="sideSidebar" class="sidebar" style="display:none;">
    <h2>Barry View</h2>
    <button onclick="switchMainTab(event, 'sideDashboard')">General</button>
    <button onclick="switchMainTab(event, 'barryMacTab')">MAC</button>
  </div>

  <div id="content-wrapper">
    <div id="mainDashboard" class="main-content">
      <h1>Closure Code Dashboard</h1>
      {generate_global_tab(df)}
      {generate_individual_tab(df)}
      {generate_scheduling_tab()}
      {generate_lec_tab(df)}
      {generate_failure_analysis_tab(df)}
      {frat_tab_html}
    </div>

    <div id="sideDashboard" class="side-tab side-content" style="display:none;">
      <h1>Barry View – General</h1>
      <div style="background:white; padding:30px; border-radius:12px;">
        <h2>Task Owner Distribution from Sheet2</h2>
        {sheet2_pie_html}
      </div>
    </div>

    <div id="barryMacTab" class="side-tab side-content" style="display:none;">
      <h1>Barry View – MAC</h1>
      <div style="background:white; padding:30px; border-radius:12px;">
        <h2>MACD Task Owner Distribution (after 10/10/2024)</h2>
        {barry_mac_tab_html}
      </div>
    </div>
  </div>

  <div id="viewSwitcher" style="
    position: fixed;
    bottom: 20px;
    left: 20px;
    background: #2f3542;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    display: flex;
    z-index: 1000;
  ">
    <button onclick="toggleView('main')" id="mainBtn" class="viewbtn active">Main</button>
    <button onclick="toggleView('side')" id="sideBtn" class="viewbtn">Side</button>
  </div>

</body>
</html>
"""

    with open(EXPORT_HTML, "w", encoding="utf-8") as f:
        f.write(html)

if __name__ == "__main__":
    main()
