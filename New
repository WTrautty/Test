def generate_barry_task_owner_pie():
    import pandas as pd
    import plotly.express as px

    try:
        df_sheet2 = pd.read_excel(BARRY_EXCEL_PATH, sheet_name="Sheet2", engine="openpyxl")
    except Exception as e:
        return f"<p><strong>Error loading Sheet2:</strong> {e}</p>"

    if "Task Owner" not in df_sheet2.columns:
        return "<p><strong>'Task Owner' column not found in Sheet2.</strong></p>"

    pie_df = df_sheet2["Task Owner"].value_counts().reset_index()
    pie_df.columns = ["Task Owner", "Count"]

    fig = px.pie(pie_df, names="Task Owner", values="Count", title="Barry â€“ Task Ownership Distribution")
    fig.update_layout(height=500)

    return fig.to_html(full_html=False, include_plotlyjs=True)
